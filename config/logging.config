[loggers]
keys=root,main,getting_started,modis_comparisons,data_interface

[handlers]
keys=consoleHandler

[formatters]
keys=consoleFormatter

#----- LOGGERS

[logger_root]
level=DEBUG
handlers=consoleHandler

[logger_main]
level=DEBUG
handlers=consoleHandler
qualname=main
propagate=0

[logger_getting_started]
level=DEBUG
handlers=consoleHandler
qualname=getting_started
propagate=0

[logger_modis_comparisons]
level=DEBUG
handlers=consoleHandler
qualname=modis_comparisons
propagate=0

[logger_data_interface]
level=DEBUG
handlers=consoleHandler
qualname=data_interface
propagate=0


#----- HANDLERS

[handler_consoleHandler]
class=StreamHandler
formatter=consoleFormatter
args=(sys.stdout,)

#[handler_logFileHandler]
#class=FileHandler
#formatter=consoleFormatter
#args=('%(logfilename)s',)

#----- FORMATTERS

[formatter_consoleFormatter]
format=%(asctime)s - %(lineno)s - %(name)s - %(levelname)s - %(message)s
datefmt=%Y-%m-%d %H:%M:%S
class=logging.Formatter
